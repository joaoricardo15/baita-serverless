          "data": {
            "type": "object"
          }
        },
        "required": [
          "success",
          "message"
        ]
      },
      "CreateUserRequest": {
        "title": "User",
        "type": "object",
        "properties": {
          "userId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "picture": {
            "type": "string"
          }
